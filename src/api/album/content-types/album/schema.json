{
  "kind": "collectionType",
  "collectionName": "albums",
  "info": {
    "singularName": "album",
    "pluralName": "albums",
    "displayName": "album",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "text"
    },
    "recentlyPlayedAt": {
      "type": "datetime"
    },
    "songs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::song.song",
      "mappedBy": "album"
    },
    "plays": {
      "type": "integer"
    }
  }
}
